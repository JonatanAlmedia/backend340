<!-- The Content Heading -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>


<!-- register form -->
<div class="signin_form">
  <P class="form_announcement">All fields are required</P>
  <form action="/account/registration" method="post">

    <label for="firstName">First Name:</label>
    <input type="text" name="account_firstname" id="accountFirstname" required value="<%= locals.account_firstname %>">
    <label for="lastName">Last Name:</label>
    <input type="text" name="account_lastname" id="accountLastname" required value="<%= locals.account_lastname %>">
    <label for="email">Email Address:</label>
    <input type="email" name="account_email" id="accountEmail" required value="<%= locals.account_email %>" placeholder="Enter a valid email address">
    <label for="password">Password *</label>
        <input type="password" id="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    <p class="error-message" id="passwordError"></p>
    <div class="showPassword">
      <input type="checkbox" id="checkbox" name="checkbox" onclick="showPassword()">
      <label for="checkbox">Show Password </label><br>
    </div>
    <p class="form_announcement">Password mut be minimun of 12 characteres and include 1 capital letter, 1 number and 1 special character.</p>
    <button type="submit">Register</button>
  </form>
</div>